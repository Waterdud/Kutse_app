@{
    ViewBag.Title = "Tere tulemast pelole!";
    ViewBag.Greeting = "Tere tulemast";
    ViewBag.Message = "Oleme rõõmsad, et olete siin!";
}

<!DOCTYPE html>
<html lang="et">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #FFF5F8;
            font-family: 'Arial', sans-serif;
        }
        .header-container {
            background-color: #FF69B4;
            color: white;
            padding: 30px 20px;
            text-align: center;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .header-container h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }
        .message-container {
            text-align: center;
            margin: 30px 0;
            padding: 20px;
            background-color: #FFD1DC;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .message-container img {
            width: 80px;
            margin-top: 15px;
        }
        .action-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
        .btn-custom {
            background-color: #FF1493;
            color: white;
            padding: 10px 20px;
            font-size: 1.2rem;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .btn-custom:hover {
            background-color: #E01185;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="header-container">
            <h1>@ViewBag.Greeting, kallis sõber!</h1>
        </div>

        <div class="message-container">
            <p>@ViewBag.Message</p>
            <img src="~/Images/smile.png" alt="Smile Icon" />
        </div>

        <div class="action-container">
            @Html.ActionLink("Vasta", "Ankeet", "Ankeet", new { @class = "btn btn-custom" })
        </div>
    </div>
</body>
</html>
